@model Lab5.Models.RegisterModel


<form method="post" asp-controller="Account" asp-action="Register">
    <!-- Username -->
    <div class="form-group">
        <label for="Username">Ім'я користувача (макс. 50 символів)</label>
        <input type="text" id="Username" name="Username" class="form-control" value="@Model.Username" />
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Username)</span>
    </div>

    <!-- Full Name -->
    <div class="form-group">
        <label for="FullName">ФІО (макс. 500 символів)</label>
        <input type="text" id="FullName" name="FullName" class="form-control" value="@Model.FullName" />
        <span class="text-danger">@Html.ValidationMessageFor(m => m.FullName)</span>
    </div>

    <!-- Password -->
    <div class="form-group">
        <label for="Password">Пароль (мінімум 8 символів, 1 цифра, 1 знак, 1 велика літера)</label>
        <input type="password" id="Password" name="Password" class="form-control" value="@Model.Password" />
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
    </div>

    <!-- Confirm Password -->
    <div class="form-group">
        <label for="ConfirmPassword">Підтвердження паролю</label>
        <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" value="@Model.ConfirmPassword" />
        <span class="text-danger">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
    </div>

    <!-- Phone -->
    <div class="form-group">
        <label for="Phone">Телефон (формат Україна)</label>
        <input type="text" id="Phone" name="Phone" class="form-control" value="@Model.Phone" />
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Phone)</span>
    </div>

    <!-- Email -->
    <div class="form-group">
        <label for="Email">Електронна пошта</label>
        <input type="email" id="Email" name="Email" class="form-control" value="@Model.Email" />
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
    </div>

    <button type="submit" class="btn btn-primary">Зареєструватися</button>
</form>

<!-- Validation Scripts -->
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}